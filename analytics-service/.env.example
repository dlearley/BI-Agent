# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/analytics_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=analytics_db
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# HIPAA Configuration
HIPAA_MODE=true
HIPAA_MIN_THRESHOLD=5

# Analytics Configuration
ANALYTICS_REFRESH_INTERVAL=3600000
ANALYTICS_CACHE_TTL=300

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_TIMEOUT=30000

# BullMQ Configuration
BULLMQ_REDIS_URL=redis://localhost:6379

# Export Configuration
# S3 Configuration
S3_BUCKET=analytics-exports
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_ENDPOINT= # Optional: for S3-compatible services

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=analytics@example.com
FROM_NAME=Analytics Service

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Export Settings
EXPORT_MAX_FILE_SIZE=104857600
EXPORT_SIGNED_URL_TTL=3600
EXPORT_RETENTION_DAYS=90

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=analytics-service
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
LOG_LEVEL=info
