# Environment variables for Celery Worker

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/analytics_db

# Redis Configuration (Celery Broker and Backend)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# dbt Configuration
DBT_PROJECT_PATH=/home/engine/project/dbt
DBT_PROFILES_DIR=/home/engine/project/dbt

# API Configuration
ANALYTICS_API_URL=http://localhost:3000
API_SECRET_KEY=your-secret-key-here

# Monitoring Configuration
PROMETHEUS_PORT=8000
FLOWER_PORT=5555

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Retry Configuration
TASK_DEFAULT_RETRY_DELAY=60
TASK_MAX_RETRIES=3

# Concurrency Configuration
WORKER_CONCURRENCY_ANALYTICS=2
WORKER_CONCURRENCY_DBT=1
WORKER_CONCURRENCY_ALERTS=4
WORKER_CONCURRENCY_REPORTS=2

# Alert Configuration
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-app-password

# Report Configuration
REPORT_OUTPUT_DIR=/tmp/reports
REPORT_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO