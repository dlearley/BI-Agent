{
  "name": "bi-agent",
  "version": "1.0.0",
  "description": "BI-Agent - Analytics and Business Intelligence Platform",
  "private": true,
  "workspaces": [
    "analytics-service"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev": "npm run dev --workspace=bi-agent-analytics",
    "build": "npm run build --workspace=bi-agent-analytics",
    "start": "npm run start --workspace=bi-agent-analytics",
    "test": "npm run test --workspace=bi-agent-analytics",
    "lint": "npm run lint --workspace=bi-agent-analytics",
    "analytics:run": "npm run analytics:run --workspace=bi-agent-analytics",
    "analytics:test": "npm run analytics:test --workspace=bi-agent-analytics",
    "setup": "chmod +x jobs/setup.sh && jobs/setup.sh",
    "setup:full": "jobs/setup.sh --with-sample-data --with-dbt --with-tests",
    "seed": "npm run seed --workspace=bi-agent-analytics",
    "worker:setup": "cd apps/worker && ./workerctl.sh setup",
    "worker:start": "cd apps/worker && ./workerctl.sh start-all",
    "worker:stop": "cd apps/worker && ./workerctl.sh stop-all",
    "worker:restart": "cd apps/worker && ./workerctl.sh restart-all",
    "worker:status": "cd apps/worker && ./workerctl.sh status",
    "worker:migrate": "cd apps/worker && python migrate_db.py",
    "docker:worker": "cd apps/worker && docker-compose up -d",
    "docker:worker:down": "cd apps/worker && docker-compose down"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0"
}